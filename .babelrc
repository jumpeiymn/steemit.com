{
  "presets": ["es2015", "stage-0", "react"],
  "plugins": "transform-runtime",
  "env": {
      "browser": {
        "plugins": [["react-transform", {
          "transforms": [
            {
              "transform": "react-transform-catch-errors",
              "imports": [
                "react",
                "redbox-react"
              ]
            }]
          }],
          ["react-intl", {
            "messagesDir": "./app/languages/",
            "enforceDescriptions": false, 
            "extractSourceLocation": true
          }]
        ]
      }
    }
}
